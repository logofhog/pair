<ul>
<% @main_page.broadcasts.each do |b| %>
  <li> <%= b.message %>
       sender: <%= b.broadcaster %>
  </li>
<% end %>
</ul>

<div id = 'send_broadcast'>
  <%= form_tag broadcasts_url, :remote => true do %>
    <%= text_area_tag "broadcast[message]" %>
    <%= submit_tag "Broadcast Message " %>
  <% end %>
</div>
