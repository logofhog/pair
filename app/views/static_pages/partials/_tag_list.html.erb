<%= form_tag tags_url, :remote => true do %>
  <%= text_field_tag "tag" %>
  <%= submit_tag "Add Interest " %>
<% end %>
<ul><h4> My Interests</h4>
  <div id='tags' >
<% current_user.tags.each do |t| %>
  <li>
    <%= t.name %><%= button_to 'delete', tag_path(t.name), :method => :delete, :remote => true %>
  </li>
<% end %>
</div>
</ul>
